<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="gerenciamento_curso">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>br.com.ifba.curso.entity.Curso</class>
    <properties>
      <property name="jakarta.persistence.jdbc.url"
                value="jdbc:mysql://localhost:3306/gerenciamento_curso?createDatabaseIfNotExist=true"/>
      
      <!-- ATENÇÃO: Verifique se o usuário e senha estão corretos -->
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value="JESUs33!"/>
      
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

      <!-- Dialeto atualizado para versão correta -->
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      
      <!-- Propriedade adicional para melhor compatibilidade -->
      <property name="hibernate.connection.provider_disables_autocommit" value="true"/>
    </properties>
  </persistence-unit>
</persistence>